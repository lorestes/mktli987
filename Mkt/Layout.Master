<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="Layout.Master.cs" Inherits="Mkt.Master" %>
<% string local = HttpContext.Current.Request.Url.AbsolutePath;
   Session["local"] = local.Substring(1, local.IndexOf('/', local.IndexOf('/') + 1)).Replace("/", "");
%>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title>Liverpool Marketing</title>
    <asp:ContentPlaceHolder ID="headPlaceHolder" runat="server">
    </asp:ContentPlaceHolder>
    <link rel="stylesheet" type="text/css" href="Conteudo/bootstrap/css/bootstrap.min.css" />
</head>
<body>
    <form id="frmMain" runat="server">
    <asp:ScriptManager ID="ScriptManager1" runat="server">
        <Scripts>
            <asp:ScriptReference Path="~/Scripts/jquery-2.0.2.min.js" />
            <asp:ScriptReference Path="~/Conteudo/bootstrap/js/bootstrap.min.js" />
        </Scripts>
    </asp:ScriptManager>
    <div>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <a class="brand" href="#" style="margin-left:2px;">Liverpool</a>
                <ul class="nav">
                    <% if ((string)Session["local"] == "Home") { %> <li class="active"><a href="#">Home</a></li> <% } else { %> <li><a href="#">Home</a></li> <% } %> 
                    <% if ((string)Session["local"] == "Clientes") { %> <li class="active"><a href="~/Clientes">Clientes</a></li> <% } else { %> <li><a href="#">Clientes</a></li> <% } %>
                    <% if ((string)Session["local"] == "Fornecedores") { %> <li class="active"><a href="~/Fornecedores">Fornecedores</a></li> <% } else { %> <li><a href="#">Fornecedores</a></li> <% } %>
                    <% if ((string)Session["local"] == "Contatos") { %> <li class="active"><a href="~/Contatos">Contatos</a></li> <% } else { %> <li><a href="#">Contatos</a></li> <% } %>
                    <% if ((string)Session["local"] == "Serviços") { %> <li class="active"><a href="~/Servicos">Serviços</a></li> <% } else { %> <li><a href="#">Serviços</a></li> <% } %>
                    <% if ((string)Session["local"] == "Financeiro") { %> <li class="active"><a href="~/Financeiro">Financeiro</a></li> <% } else { %> <li><a href="#">Financeiro</a></li> <% } %>
                    <% if ((string)Session["local"] == "Usuários") { %> <li class="active"><a href="~/Usuarios">Usuários</a></li> <% } else { %> <li><a href="#">Usuários</a></li> <% } %>
                </ul>
            </div>
        </div>
        <br /><br /><br />
        <div style="width: 940px; margin: auto;" class="container">
            <asp:ContentPlaceHolder ID="contentPlaceHolder" runat="server">
            
            </asp:ContentPlaceHolder>
        </div>
    </div>
    </form>
</body>
</html>
